{% extends 'base.html.twig' %}

{% block body %}
    <h1>Results list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Bestscore</th>
                <th>Lastscore</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td><a href="{{ path('resultsCrud_show', { 'id': result.id }) }}">{{ result.id }}</a></td>
                <td>{{ result.bestScore }}</td>
                <td>{{ result.lastScore }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('resultsCrud_show', { 'id': result.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('resultsCrud_edit', { 'id': result.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('resultsCrud_new') }}">Create a new result</a>
        </li>
    </ul>
{% endblock %}
